% A consistent style for typed lecture-style notes.
% Includes variations on some of the environments defined in lb_theory, e.g. example, proof.
%

\ProvidesPackage{lb_notes}[30/03/2021]

% \RequirePackage{mdframed}
\RequirePackage{ntheorem}

\theoremstyle{break}
\newtheorem{theorem}{Theorem}[section]
\newtheorem{defn}{Definition}[section]
\newtheorem{corollary}{Corollary}[section]
\newtheorem{example}{Example}[section]
\newtheorem{lemma}{Lemma}[section]
\newtheorem{result}{Result}[section]
\newtheorem{hypo}{Hypothesis}[section]

% Proof environment, ended with box
\newenvironment{proof}{%
	\noindent{\bfseries Proof.}\hspace{0.5em}
}{%
	\ \null  \hfill $\square$ \par
}

\DeclareOption*{\OptionNotUsed}
\ProcessOptions\relax

% Answer environment, in red
\newcommand{\answer}[1]{{\color{red}#1}}

% No indents on new paragraphs, these are the work of the devil
\setlength\parindent{0pt}
